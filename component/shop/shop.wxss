.shop-list-item{
  border-bottom: 2rpx solid #eee;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.shop-info{
  padding: 20rpx 30rpx 20rpx 30rpx;
  width: 100%;
  height: 180rpx;
  box-sizing: border-box;
}

.shop-info-img{
    width:25%;
    height:100%;
    float:left;
    border-radius:4rpx;
    box-sizing:border-box;
}

.shop-info-detail{
    float:left;
    font-size:26rpx;
    width:75%;
    height:100%;
    box-sizing:border-box;
    padding-left: 20rpx

}

.shop-info-detail-name{
  font-size: 32rpx;
  white-space: nowrap;
  overflow:scroll;
}

.shop-info-detail-middle{
    height: 70rpx;
    line-height: 70rpx;
}

.shop-info-detail-other{
    color: #555;
}

.shop-info-detail-sales{
    color: #555;
}

.shop-info-detail-other-left{
    float: left;
}

.shop-info-detail-other-right{
    float: right;
}

.star{
   position: absolute;
   top: 0;
   left: 0;
   display: inline-block;
   height: 24rpx;
   background: url("../../images/star.png") no-repeat;
   background-size: 140rpx 24rpx;
}
.star-gray{
  position: relative;
  display: inline-block;
  width: 140rpx;
  height: 24rpx;
  background: url("../../images/star-gray.png") no-repeat;
  background-size: 140rpx 24rpx;
  margin-right: 10rpx;
}

.shop-info-detail-startingFee{
  margin-right: 20rpx;
}

.shop-activity{
    width: 100%;
    font-size: 24rpx;
    color: #999;
    position: relative;
    overflow: hidden;
}

.shop-activity-list{
    float: right;
    width: 70%; 
    border-top: 2rpx dotted #ccc;   
}

.shop-activity-list-hide{
    overflow:hidden;
    max-height: 90rpx;
}

.shop-activity-item{
    padding-top: 10rpx; 
    position: relative;
    width: 70%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.shop-activity-control{
    position: absolute;
    top: 12rpx;
    right: 30rpx;
}

.shop-activity-icon{
    position: relative;
    top: 4rpx;
    width: 30rpx;
    height: 30rpx;
    padding-right: 6rpx;
}

.shop-activity-arrow{
    width: 32rpx;
    height: 32rpx;
    position: relative;
    top: 6rpx;
}

