<template name="shop-item">
    <navigator class="shop-info" bindtap='goDetails' data-id="{{item.Id}}">
              <image class="shop-info-img" src="{{item.CoverUrl}}" ></image>
              <view class="shop-info-detail">
                <view class="shop-info-detail-name">{{item.Name}}{{item.branchName ? "（"+item.branchName+"）":""}}</view>
                <view class="shop-info-detail-middle">
                  <text class="star-gray">
                      <text class="star star-{{item.score}}"></text>
                  </text>
                  <text class="shop-info-detail-sales">{{item.Msg}}</text>
                </view>
                
                <view class="shop-info-detail-other">
                    <view class="shop-info-detail-other-left">
                        <text>现价 ￥{{item.Price}}</text> 
                        <text class="shop-info-detail-other-middle"> | </text> 
                        <text style='text-decoration: line-through; padding-left: 1em;'>原价 ￥{{item.StandardPrice}}</text>
                    </view>
                    <view class="shop-info-detail-other-right">
                        <text>{{item.duration}}</text> 
                        <text class="shop-info-detail-other-middle"> | </text> 
                        <text>{{item.distance}}</text>
                    </view>
                </view>
              </view>
    </navigator>
